{% extends "base.html.twig" %}

{% block content %}

<section class="text-gray-600 body-font overflow-hidden">
    <div class="container px-5 py-24 mx-auto">
      <div class="lg:w-4/5 mx-auto flex flex-wrap">
        <img alt="ecommerce" class="lg:w-1/2 w-full lg:h-auto h-64 object-cover object-center rounded" src="https://dummyimage.com/400x400">
        <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
          {# <h2 class="text-sm title-font text-gray-500 tracking-widest">BRAND NAME</h2> #}
          <h1 class="text-gray-900 text-3xl title-font font-medium mb-1">{{ recipe.name }}</h1>
          {% for tag in tags %}
            <span>
                <a href="{{ path('show_tag', {id: tag.id}) }}"><strong>{{ tag.name }}</strong></a>
            </span>
         {% endfor %}
         
          <p class="leading-relaxed">{{ recipe.content }}</p>
          
          <div class="flex">
            {# <span class="title-font font-medium text-2xl text-gray-900">$58.00</span> #}
            {# <button class="flex ml-auto text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded">Button</button> #}
            <a href="{{ path('update_recipe', {id: recipe.id}) }}" class="text-blue-500">Edit</a>
            <a href="{{ path('delete_recipe', {id: recipe.id}) }}" class="ml-4 text-red-500">Delete</a>
          </div>
        </div>
      </div>
    </div>
  </section>




{% endblock %}
