{% extends "base.html.twig" %}

{% block title %}Recipe APP{% endblock %}

{% block content %}

{% for message in app.flashes('notice') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}

<div class="bg-white">
    <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
      <h2 class="text-2xl font-extrabold tracking-tight text-gray-900">All recipes</h2>
      <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
          {% for recipe in recipes %}
          <div class="group relative">
                  <div class="w-full min-h-80 bg-gray-200 aspect-w-1 aspect-h-1 rounded-md overflow-hidden group-hover:opacity-75 lg:h-80 lg:aspect-none">
                    {% if recipe.getImage().name is defined %}
                      <img src="{{ asset('uploads/images/' ~ recipe.getImage().name) }}" alt="Front of men&#039;s Basic Tee in black." class="w-full h-full object-center object-cover lg:w-full lg:h-full">
                    {% else %}
                      <img src="https://img.cuisineaz.com/660x660/2018/03/19/i137643-sauce-basquaise.jpeg" alt="Front of men&#039;s Basic Tee in black." class="w-full h-full object-center object-cover lg:w-full lg:h-full">
                    {% endif %}
                  </div>
                  <div class="mt-4 flex justify-between">
                    <div>
                      <h3 class="text-sm text-gray-700">
                        <a href="{{ path('show_recipe', {id: recipe.id}) }}">
                          <span aria-hidden="true" class="absolute inset-0"></span>
                          {{ recipe.name|e  }}
                        </a>
                      </h3>
                            {% for tag in recipe.getTags() %}
                                <p class="mt-1 text-sm text-gray-500">{{ tag.name }}</p>
                            {% endfor %}
                    </div>
                    {# <p class="text-sm font-medium text-gray-900">$35</p> #}
                  </div>
                </div>
    {% endfor %}

<!-- More products... -->
</div>
</div>
</div>


{% endblock %}
