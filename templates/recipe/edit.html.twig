{% extends "base.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('recipe_tag') }}
    {{ encore_entry_script_tags('edit_recipe_tag') }}
{% endblock %}


{% block content %}

<div class="flex justify-center">

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        {{ form_start(form) }}
        
        <div class="mb-4">
            <label for="" class="block text-gray-700 text-sm font-bold mb-2">{{ form_label(form.name) }}</label>
            {{ form_widget(form.name, {'attr': {'class' : 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        </div>

        <div>
            <label for="" class="block text-gray-700 text-sm font-bold mb-2">{{ form_label(form.content) }}</label>
            {{ form_widget(form.content, {'attr': {'class' : 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        </div>

        <div class="m-4">
            <label for="" class="block text-gray-700 text-sm font-bold mb-2">{{ form_label(form.tags) }}</label>
                {{ form_widget(form.tags, {'attr' : {'class' : 'shadow appearance-none border rounder w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}

        </div>

        <div>
            {{ form_label(form.save, {'attr': {'class' : 'text-white'}}) }}
            {{ form_widget(form.save, {'attr' : {'class' : 'text-gray-200 bg-gray-200 hover:bg-gray-400  font-bold py-2 px-3 text-gray-700 mb-3 leading-right focus-outline-none focus-shadow-outline rounded'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
</div>
    

{% endblock %}
