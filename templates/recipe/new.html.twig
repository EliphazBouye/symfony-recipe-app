{% extends "base.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('recipe_tag') }}
{% endblock %}


{% block content %}


{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.content) }}

    <h3>Tags</h3>
    <ul class="tags" data-index="{{ form.tags|length > 0 ? form.tags|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}">
        {% for tag in form.tags %}
            <li>{{ form_row(tag.name, {'label': ''}) }}</li>
        {% endfor %}
    </ul>
        <button type="button" class="add_item_link" data-collection-holder-class="tags">Add a tag</button>

{{ form_end(form) }}


{% endblock %}
