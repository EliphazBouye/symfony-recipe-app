{% extends 'base.html.twig' %}

{% block title %}Hello TagController!{% endblock %}

{% block content %}

        <div class="text-gray-600 body-font">
            <div class="container px-5 py-24 mx-auto flex md:items-center lg:items-start md:flex-row md:flex-nowrap flex-wrap flex-col">
              
                <div class="flex-grow flex flex-wrap md:pl-20 -mb-10 md:mt-0 mt-10 md:text-left text-center">
                    <div class="lg:w-1/4 md:w-1/2 w-full px-4">
                        <h2 class="title-font font-medium text-gray-900 tracking-widest text-sm mb-3">LIST OF ALL TAGS : </h2>
                        <nav class="list-none mb-10">
                            {% for tag in tags %}
                                <li>
                                    <a class="text-gray-600 hover:text-gray-800" href="{{ path('show_tag', {id: tag.id}) }}">{{ tag.name }}</a>
                                </li>
                            {% endfor %}

                        </nav>
                    </div>
                    
                </div>
            </div>
          </div>
{% endblock %}
