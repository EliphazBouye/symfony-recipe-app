{% extends 'base.html.twig' %}

{% block title %}Tag!{% endblock %}

{% block content %}
<h2>List of recette with tag : {{tag.name}}</h2>
    <a href="{{ path('delete_tag', {id: tag.id}) }}">Delete tag</a>
    <ul>
        {% for recipe in recipes %}
           <li>
                <a href="{{ path('show_recipe', {id: recipe.id}) }}">{{ recipe.name }}</a>
           </li> 
        {% endfor %}
    </ul>
{% endblock %}
